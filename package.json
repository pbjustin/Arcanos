{
  "name": "arcanos-backend",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "dotenv -e .env -- npm run build:compile",
    "build:compile": "rm -rf dist && tsc && mkdir -p dist && cp -r workers dist && cp -r memory dist",
    "start": "node --max-old-space-size=7168 dist/index.js",
    "start:railway": "node --max-old-space-size=7168 dist/index.js",
    "dev": "node --max-old-space-size=7168 -r ts-node/register src/index.ts",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "ajv": "^8.12.0",
    "axios": "^1.10.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.21.2",
    "iconv-lite": "^0.6.3",
    "node-cron": "^4.2.1",
    "openai": "^5.10.1",
    "pg": "^8.16.3",
    "prisma": "^6.12.0"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.15.4",
    "dotenv-cli": "^9.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3"
  }
}
