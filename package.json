{
  "name": "arcanos-backend",
  "version": "1.0.0",
  "description": "ARCANOS AI Backend Service",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "dev:watch": "tsc --watch",
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "pretest": "npm run build && NODE_ENV=test USE_MOCK_OPENAI=true PORT=8080 node dist/server.js & echo $! > .server.pid",
    "test": "USE_MOCK_OPENAI=true node tests/test-api-endpoints.js",
    "posttest": "kill $(cat .server.pid 2>/dev/null) 2>/dev/null || true; rm -f .server.pid",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "openai",
    "api",
    "backend",
    "arcanos"
  ],
  "author": "Justin",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^24.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "node-cron": "^4.2.1",
    "openai": "^5.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
