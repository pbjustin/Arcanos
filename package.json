{
  "name": "arcanos-backend",
  "version": "1.0.0",
  "description": "ARCANOS AI Backend Service",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "main": "node server.cjs",
    "cron": "node cron.cjs",
    "start": "concurrently \"npm:main\" \"npm:cron\"",
    "dev": "nodemon server.cjs",
    "build": "tsc",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "node tests/test-api-endpoints.js",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "ai",
    "openai",
    "api",
    "backend",
    "arcanos"
  ],
  "author": "Justin",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/node": "^24.2.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "openai": "^5.12.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "axios": "^1.11.0",
    "concurrently": "^9.2.0",
    "json": "^11.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
