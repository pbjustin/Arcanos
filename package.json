{
  "name": "arcanos-backend",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "rm -rf dist && tsc && mkdir -p dist && [ -d \"workers\" ] && cp -r workers dist || true && [ -d \"memory\" ] && cp -r memory dist || true && [ -d \"api\" ] && cp -r api dist || true",
    "start": "node --max-old-space-size=7168 dist/index.js",
    "start:railway": "node --max-old-space-size=7168 dist/index.js",
    "dev": "node --max-old-space-size=7168 -r ts-node/register src/index.ts",
    "arc:dispatch": "node bin/arc-dispatch.js",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "test": "echo \"No tests defined\" && exit 0"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0",
    "@types/luxon": "^3.6.2",
    "ajv": "^8.12.0",
    "axios": "^1.10.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.21.2",
    "iconv-lite": "^0.6.3",
    "luxon": "^3.7.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.5",
    "openai": "^5.10.2",
    "pg": "^8.16.3",
    "prisma": "^6.12.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.15.4",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.8.3"
  }
}
