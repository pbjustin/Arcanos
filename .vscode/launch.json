{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Backend (TS) Launch",
      "program": "${workspaceFolder}/dist/start-server.js",
      "preLaunchTask": "build",
      "runtimeArgs": ["--inspect"],
      "cwd": "${workspaceFolder}",
      "env": { "PORT": "8080" },
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Backend",
      "port": 9229,
      "address": "127.0.0.1",
      "cwd": "${workspaceFolder}",
      "restart": true,
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "python",
      "request": "launch",
      "name": "Daemon (Python)",
      "module": "arcanos.cli",
      "cwd": "${workspaceFolder}/daemon-python",
      "console": "integratedTerminal",
      "env": {
        "IDE_AGENT_DEBUG": "1",
        "DAEMON_DEBUG_PORT": "9999"
      }
    }
  ]
}
