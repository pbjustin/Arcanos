# Database
DATABASE_URL=postgresql://user:password@localhost:5432/arcanos

# OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
OPENAI_TRANSCRIBE_MODEL=whisper-1

# OpenAI cost rates (per 1M tokens)
OPENAI_INPUT_COST_PER_1M=5
OPENAI_OUTPUT_COST_PER_1M=15
OPENAI_VISION_INPUT_COST_PER_1M=2.5
OPENAI_VISION_OUTPUT_COST_PER_1M=10

# JWT
JWT_SECRET=your-random-secret-key-here-change-this-in-production

# Auth (login)
AUTH_USER_EMAIL=admin@example.com
AUTH_PASSWORD_SALT=replace-with-generated-salt
AUTH_PASSWORD_HASH=replace-with-generated-hash

# Server
PORT=5000
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Railway (CI/CD)
RAILWAY_PROJECT_ID=
RAILWAY_SERVICE_ID=
RAILWAY_TOKEN=
