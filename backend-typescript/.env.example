# Database
DATABASE_URL=postgresql://user:password@localhost:5432/arcanos

# OpenAI
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o
OPENAI_TRANSCRIBE_MODEL=whisper-1
OPENAI_BASE_URL=
OPENAI_ORG_ID=
OPENAI_PROJECT_ID=

# OpenAI cost rates (per 1M tokens)
OPENAI_INPUT_COST_PER_1M=5
OPENAI_OUTPUT_COST_PER_1M=15
OPENAI_VISION_INPUT_COST_PER_1M=2.5
OPENAI_VISION_OUTPUT_COST_PER_1M=10

# JWT
JWT_SECRET=your-random-secret-key-here-change-this-in-production

# Auth control
AUTH_MODE=jwt
AUTH_REQUIRED=true
AUTH_ANONYMOUS_USER_ID=anonymous
AUTH_API_KEY=
AUTH_API_KEY_HEADER=Authorization
AUTH_API_KEY_PREFIX=Bearer
AUTH_API_KEY_USER_ID=arcanos

# Auth (login)
AUTH_USER_EMAIL=admin@example.com
AUTH_PASSWORD_SALT=replace-with-generated-salt
AUTH_PASSWORD_HASH=replace-with-generated-hash

# Server
PORT=5000
NODE_ENV=production
ALLOWED_ORIGINS=http://localhost:3000

# IPC (WebSocket bridge)
IPC_WS_PATH=/ws/daemon
IPC_HEARTBEAT_INTERVAL_MS=30000
IPC_CLIENT_TIMEOUT_MS=90000
IPC_MAX_MESSAGE_SIZE=1048576
# IPC_PORT defaults to PORT when empty (Railway expects a single port)
IPC_PORT=

# Daemon GPT identity header (optional, aligns with custom GPT headers)
DAEMON_GPT_ID_HEADER=OpenAI-GPT-ID

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Railway (CI/CD)
RAILWAY_ENVIRONMENT=production
RAILWAY_PROJECT_ID=
RAILWAY_SERVICE_ID=
RAILWAY_TOKEN=
