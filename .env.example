# Environment variables
NODE_ENV=development
PORT=8080

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
FINE_TUNED_MODEL=your-fine-tuned-model-id-here

# Database Configuration (Universal Memory Archetype)
DATABASE_URL=postgresql://username:password@localhost:5432/arcanos

# Worker Configuration
RUN_WORKERS=false
SERVER_URL=http://localhost:8080

# GPT API Access Token (for diagnostics endpoint)
GPT_TOKEN=your-gpt-access-token-here

# Sleep Configuration (optional)
SLEEP_ENABLED=true
SLEEP_START=02:00
SLEEP_DURATION=7
SLEEP_TZ=UTC