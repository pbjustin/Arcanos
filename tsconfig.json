{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@types/*": ["types/*"],
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowImportingTsExtensions": true,
    "outDir": "dist"
  },
  "include": [
    "src",
    "types",
    "**/*.ts",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
