{
    "compilerOptions":  {
                            "target":  "ES2022",
                            "module":  "NodeNext",
                            "moduleResolution":  "NodeNext",
                            "esModuleInterop":  true,
                            "strict":  true,
                            "allowJs":  false,
                            "resolveJsonModule":  true,
                            "skipLibCheck":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "isolatedModules":  true,
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "sourceMap":  true,
                            "inlineSources":  true,
                            "baseUrl":  ".",
                            "paths":  {
                                          "@platform/*":  [
                                                              "src/platform/*"
                                                          ],
                                          "@shared":  [
                                                          "src/shared/index.ts"
                                                      ],
                                          "@shared/*":  [
                                                            "src/shared/*"
                                                        ],
                                          "@transport":  [
                                                             "src/transport/index.ts"
                                                         ],
                                          "@services/*":  [
                                                              "src/services/*"
                                                          ],
                                          "@transport/*":  [
                                                               "src/transport/*"
                                                           ],
                                          "@core/*":  [
                                                          "src/core/*"
                                                      ],
                                          "@routes/*":  [
                                                            "src/routes/*"
                                                        ],
                                          "@platform":  [
                                                            "src/platform/index.ts"
                                                        ]
                                      }
                        },
    "include":  [
                    "src"
                ],
    "exclude":  [
                    "node_modules"
                ],
    "ts-node":  {
                    "esm":  true,
                    "experimentalSpecifierResolution":  "node",
                    "compilerOptions":  {
                                            "module":  "NodeNext",
                                            "moduleResolution":  "NodeNext"
                                        }
                }
}
