# Core backend runtime values

# Required at startup
PORT=3000

# Runtime mode
NODE_ENV=development

# Network binding
# HOST=127.0.0.1
# SERVER_URL=http://127.0.0.1:3000

# Request handling
JSON_LIMIT=10mb
REQUEST_TIMEOUT=30000

# CORS allow-list for non-development environments
# ALLOWED_ORIGINS=https://example.com,https://api.example.com

# Persistence
# DATABASE_URL=postgresql://user:password@host:5432/database

# Runtime storage paths (ephemeral on Railway)
ARC_LOG_PATH=/tmp/arc/log
ARC_MEMORY_PATH=/tmp/arc/memory

# Worker behavior
RUN_WORKERS=true
WORKER_COUNT=4
WORKER_API_TIMEOUT_MS=60000

# Internal callbacks
BACKEND_STATUS_ENDPOINT=/status
# SERVER_URL=http://localhost:3000
